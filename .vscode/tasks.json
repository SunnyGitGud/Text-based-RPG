{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build with raylib",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "main.cpp",
        "-o", "main.exe",
        "-Iraylib/include",
        "-Lraylib/lib",
        "-lraylib",
        "-lopengl32",
        "-lgdi32",
        "-lwinmm"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}